{
  "name": "@spatial-agent/core",
  "version": "0.1.0",
  "description": "Spatial Agent - AI agents for spatial intelligence with LangGraph",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "clean": "rimraf dist/ .tsdown/",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:int": "vitest run --mode int",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ai",
    "agents",
    "spatial",
    "gis",
    "langgraph",
    "langchain"
  ],
  "author": "Spatial Agent Team",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^1.1.21",
    "@langchain/langgraph": "^1.1.4",
    "deepagents": "^1.7.5",
    "fast-glob": "^3.3.3",
    "langchain": "^1.2.20",
    "micromatch": "^4.0.8",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@langchain/langgraph-checkpoint": "^1.0.0",
    "@langchain/openai": "^1.2.3",
    "@langchain/anthropic": "^0.3.19",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "^3.0.5",
    "dotenv": "^16.4.7",
    "rimraf": "^6.0.1",
    "tsdown": "^0.20.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*"
  ]
}
